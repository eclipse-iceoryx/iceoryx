cmake_minimum_required(VERSION 3.5)

project(tiny_json_build NONE)

include(ExternalProject)

message ("Configure Command = ${CREATE_PATH_COMMAND} ${BUILD_DIR}")

file(MAKE_DIRECTORY ${BUILD_DIR})

ExternalProject_Add(tiny_json_build
        GIT_REPOSITORY    https://github.com/rafagafe/tiny-json.git
        GIT_TAG           08a32cacbd3c49e07de76c1ef4297bbcb134250b
        SOURCE_DIR        ${SOURCE_DIR}
        BINARY_DIR        ${BUILD_DIR}
        CONFIGURE_COMMAND ""
        BUILD_COMMAND     "${CMAKE_COMMAND}" -G "${CMAKE_GENERATOR}" -S ${DEPENDENCY_BASE_DIR} -B ${BUILD_DIR} -DCMAKE_INSTALL_PREFIX=${INSTALL_DIR} ${ADDITIONAL_CMAKE_FLAGS} ${TOOLCHAIN_FILE}
        INSTALL_COMMAND   "${CMAKE_COMMAND}" --build ${BUILD_DIR} --target install ${CMAKE_BUILD_FLAGS} 
        TEST_COMMAND      ""
)

add_custom_target(tiny_json_compile
                DEPENDS tiny_json_build)
