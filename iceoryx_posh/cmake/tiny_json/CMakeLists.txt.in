cmake_minimum_required(VERSION 3.5)

project(tiny_json)

add_library(tiny_json STATIC
        src/tiny-json.c
        )

target_include_directories(tiny_json
    PUBLIC
    $<BUILD_INTERFACE:${CMAKE_CURRENT_SOURCE_DIR}/src>
    $<INSTALL_INTERFACE:include/tiny_json>
)

set_target_properties(tiny_json PROPERTIES
    CXX_STANDARD_REQUIRED ON
    CXX_STANDARD @ICEORYX_CXX_STANDARD@
    POSITION_INDEPENDENT_CODE ON
)

set_target_properties(tiny_json PROPERTIES LINKER_LANGUAGE CXX)

install(TARGETS tiny_json EXPORT tiny_jsonTargets 
    LIBRARY DESTINATION lib
    ARCHIVE DESTINATION lib
    RUNTIME DESTINATION bin
    INCLUDES DESTINATION include/tiny_json
    )

install (DIRECTORY src/ DESTINATION include/tiny_json FILES_MATCHING PATTERN "*.h" PATTERN ".git*" EXCLUDE PATTERN "test" EXCLUDE PATTERN "examples" EXCLUDE)

install (EXPORT tiny_jsonTargets 
    FILE tiny_jsonTargets.cmake
    NAMESPACE tiny_json::
    DESTINATION lib/cmake/tiny_json
    )

install (FILES "tiny_jsonConfig.cmake"
    DESTINATION lib/cmake/tiny_json
    )

add_library(tiny_json::tiny_json ALIAS tiny_json)
