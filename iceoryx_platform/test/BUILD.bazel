    data = glob(["input/**"]),
    includes = [
        ".",
        "moduletests",
    ],
    linkopts = select({
        "//iceoryx_platform:linux": ["-ldl"],
        "//iceoryx_platform:mac": [],
        "//iceoryx_platform:qnx": [],
        "//iceoryx_platform:unix": [],
        "//iceoryx_platform:win": [],
